<p id="notice"><%= notice %></p>

<h1>Listing Companies</h1>

<table class="table table-striped">
  <thead class="thead-inverse">
    <tr>
      <th>Name</th>
      <th>Short description</th>
      <th>Founded</th>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company %></td>
        <td><%= company.short_description %></td>
        <td><%= company.founded %></td>
        <td><%= company.city %></td>
        <td><%= company.state %></td>
        <td><%= link_to 'Edit', edit_company_path(company), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path, class: "btn btn-success" %>

