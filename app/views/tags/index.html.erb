<p id="notice"><%= notice %></p>

<h1>Listing Tags</h1>

<table class="table table-striped">
  <thead class="thead-inverse">
    <tr>
      <th>Category</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= link_to tag.category, tag %></td>
        <td><%= link_to 'Edit', edit_tag_path(tag), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_tag_path, class: "btn btn-success" %>

